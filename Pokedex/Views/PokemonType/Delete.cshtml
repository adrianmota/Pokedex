@model Application.ViewModels.PokemonTypeViewModel
@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <div class="row">
        <div class="card p-0 col-6 offset-3">
            <div class="card-header">
                <h4 class="text-center">¿Está seguro que desea borrar el tipo de pokémon @Model.Name?</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="PokemonType" asp-action="Delete">
                    <input asp-for="Id" type="hidden"/>
                    <button class="btn btn-danger" type="submit">Aceptar</button>
                    <a class="btn btn-secondary" asp-controller="PokemonType" asp-action="Index">Volver atrás</a>
                </form>
            </div>
        </div>
    </div>
</div>