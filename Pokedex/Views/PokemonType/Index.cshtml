@model List<Application.ViewModels.PokemonTypeViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-4 offset-9">
            <a class="btn btn-success" asp-controller="PokemonType" asp-action="Create">Crear tipo de pokémon</a>
        </div>
    </div>
    <div class="row">
        @foreach (var pokemonType in Model)
        {
            <div class="col-3 mb-3">
                <div class="card">
                    <div class="card-header">
                        <h4>@pokemonType.Name</h4>
                    </div>
                    <div class="card-body">
                        <a class="btn btn-secondary" asp-controller="PokemonType" asp-action="Edit" asp-route-id="@pokemonType.Id">Editar</a>
                        <a class="btn btn-danger" asp-controller="PokemonType" asp-action="Delete" asp-route-id="@pokemonType.Id">Borrar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

