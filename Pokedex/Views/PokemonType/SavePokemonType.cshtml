@model Application.ViewModels.PokemonTypeViewModel
@{
    bool editMode = !(Model.Id == 0);
    string title = editMode ? "Editar tipo de pokémon" : "Crear tipo de pokémon";
    string action = editMode ? "EditPost" : "Create";
    ViewData["Title"] = title;
}

<div class="container-fluid">
    <div class="row">
        <div class="card shadow-sm p-0 col-6 offset-3">
            <div class="card-header bg-black text-white">
                <h4 class="text-center">@title</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="PokemonType" asp-action="@action">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Nombre</label>
                        <input asp-for="Name" type="text" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <input asp-for="Id" type="hidden" />
                    </div>

                    <div class="align-group-end">
                        <div>
                            <button class="btn btn-primary" type="submit">Guardar</button>
                            <a asp-controller="PokemonType" asp-action="Index" class="btn btn-secondary">Volver atrás</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>