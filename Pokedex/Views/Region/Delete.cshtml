@model Application.ViewModels.RegionViewModel
@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <div class="row">
        <div class="card">
            <div class="card-header">
                <h4>¿Está seguro que desea borrar la región @Model.Name?</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Region" asp-action="DeletePost">
                    <input type="hidden" asp-for="Id" />

                    <button class="btn btn-danger" type="submit">Aceptar</button>
                    <a asp-controller="Region" asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>

