@model List<Application.ViewModels.RegionViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-4">
            <a class="btn btn-success" asp-controller="Region" asp-action="Create">Crear región</a>
        </div>
    </div>
    <div class="row">
        @if (Model == null || Model.Count() == 0)
        {
            <h4>No hay regiones en el sistema</h4>
        }
        else
        {
            @foreach (var region in Model)
            {
                <div class="col-3">
                    <div class="card mb-3">
                        <div class="card-header">
                            <h4>@region.Name</h4>
                        </div>
                        <div class="card-body">
                            <div class="btn-group">
                                <a asp-controller="Region" asp-action="Edit" asp-route-id="@region.Id" class="btn btn-ms btn-outline-secondary">Editar</a>
                                <a asp-controller="Region" asp-action="Delete" asp-route-id="@region.Id" class="btn btn-ms btn-outline-danger">Borrar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

